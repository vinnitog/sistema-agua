<div class="container">
  <h1 class="page-header"><span class="glyphicon glyphicon-user"> Cadastro </span></h1>
  <%= form_for :user, url: '/users' do |f| %>
    <div class="form-group">
      <div class="col-md-12">  
        <%= f.label 'Nome' %><br>
        <div class="col-md-4">
          <%= f.text_field :name , class: 'form-control'%>
        </div>
      </div>
     
      <div class="col-md-12">
        <%= f.label 'Email' %><br>
        <div class="col-md-4">
        <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-12"><br/>
        <%= f.label 'Senha' %><br>
        <div class="col-md-4">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-12"><br/>
        <%= f.label 'Confirme a Senha' %><br>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div><br/>
     
      <div class="col-md-12">
        <%= f.submit 'Cadastrar', class: 'btn btn-success' %>
        <%= link_to 'Voltar', entrar_path, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>