<div class="container">
  <h1 class="page-header"><span class="glyphicon glyphicon-tag"> Novo Pedido </span></h1>
  <%= form_for :order, url: orders_path, class: 'form' do |f| %>
  <% if @order.errors.any? %>
    <div class= "alert alert-danger" id="error_explanation">
      <ul>
        <h2>
          Ops!
        </h2>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-md-12">  
      <%= f.label 'Data do pedido' %><br>
      <div class="col-md-4">
        <%= f.text_field :date , class: 'form-control'%>
      </div>
    </div>
   
    <div class="col-md-12">
      <%= f.label 'Quantidade do Pedido' %><br>
      <div class="col-md-4">
      <%= f.text_field :quantity, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-12"><br/>
      <%= f.label 'Valor do Pedido' %><br>
      <div class="col-md-4">
        <%= f.text_field :value, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-12"><br/>
      <%= f.label 'Nome do Produto' %><br>
      <div class="col-md-4">
       <select name="produto" class="form-control">
          <% products = Product.all %>
          <% products.each do |product| %>
            <option value="<%= product.id %>"><%= product.name %></option>
          <% end %>
       </select>
      </div>
    </div><br/>
   
    <div class="col-md-12">
      <%= f.submit 'Salvar', class: 'btn btn-success' %>
      <%= link_to 'Voltar', orders_path, class: 'btn btn-default' %>
    </div>
  </div>
  <% end %>
</div>