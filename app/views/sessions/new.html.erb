<div class="container">
  <h1 class="text-center"><span class="glyphicon glyphicon-ok-sign"> Acesso ao Sistema </span></h1>
  <div class="jumbotron" style="margin: 0 auto; width:450px">
    <%= form_tag '/entrar', {class: 'text-center', role: 'form'} do%>
      <div align="center">
        <div class="form-group">
          <%= label_tag 'Email' %>
          <%= text_field_tag :email, nil, {class: 'form-control', style: 'width:80%'}%>
        </div>
        <div class="form-group">
          <%= label_tag 'Senha' %>
          <%= password_field_tag :password, nil, {class: 'form-control', style: 'width:80%'} %><br/>
        </div>
        <div class="form-group">
          <%= submit_tag 'Entrar', class: 'btn btn-success' %>
          <%= link_to "Cadastre-se", cadastrar_path, class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>